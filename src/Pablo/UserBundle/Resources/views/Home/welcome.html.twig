{% extends('PabloUserBundle::layout.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .row {
            padding-top: 10px;
            padding-bottom: 70px;
        }
        img {
            margin-right: 20px;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="page-header">
        {% for message in app.session.flashbag.get('notice') %}
            <div class="alert {{ (message.type) ? 'alert-' ~ message.type }} span4 pull-right">
                <strong>{{ (message.type == 'success') ? 'OK !' : 'Oups !' }}</strong>&nbsp;{{ message.content }}
            </div>
        {% endfor %}
        <h2>Bonjour {{ app.user.employe.prenom|title }} !</h2>
    </div>
    <div class="row"> <!-- Profil - Configuration - Logout -->
        <div class="span4">
            <div class="media">
                <a href="{{ path('pablo_profile_edit') }}">
                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/profil.png') }}" alt="profil" height="96px" width="96px">
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_profile_edit') }}">Mon profil</a>
                    </h4>
                </div>
            </div>
        </div>
        {% if (is_granted('ROLE_SUPER_ADMIN')) %}
            <div class="span4">
                <div class="media">
                    <a href="{{ path('pablo_user_notready') }}">
                        <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/configuration.png') }}" alt="config" height="96px" width="96px">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">
                            <a href="{{ path('pablo_user_notready') }}">Configuration</a>
                        </h4>
                    </div>
                </div>
            </div>
        {% endif %}
        <div class="span4 {{ (not is_granted('ROLE_SUPER_ADMIN')) ? 'offset4' }}">
            <div class="media">
                <a href="{{ path('pablo_user_logout') }}">
                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/logout.png') }}" alt="logout" height="96px" width="96px">
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_user_logout') }}">D&eacute;connexion</a>
                    </h4>
                </div>
            </div>
        </div>
    </div> <!-- /Profil - Configuration - Logout -->
    <div class="row"> <!-- Académie - Cours - Professeurs -->
        <div class="span4">
            <div class="media">
                <a href="{{ path('pablo_user_notready') }}">
                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/academie.png') }}" alt="academie" height="96px" width="96px"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_user_notready') }}" >Acad&eacute;mie</a>
                    </h4>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="media">
                <a href="{{ path('pablo_user_notready') }}">
                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/cours.png') }}" alt="cours" height="96px" width="96px"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_user_notready') }}">Cours</a>
                    </h4>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="media">
                <a href="{{ path('pablo_employe_list') }}">
                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/professeurs.png') }}" alt="teachers" height="96px" width="96px"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_employe_list') }}">Professeurs</a>
                    </h4>
                </div>
            </div>
        </div>
    </div> <!-- /Académie - Cours - Professeurs -->
    <div class="row"> <!-- Elèves - Minerval - Statistiques -->
        <div class="span4">
            <div class="media">
