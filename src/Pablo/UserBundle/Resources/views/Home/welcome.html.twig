            <div class="media">
                <a href="{{ path('pablo_user_notready') }}">
                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/statistiques.png') }}" alt="statistiques" height="96px" width="96px"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_user_notready') }}" >Statistiques</a>
                    </h4>
                </div>
            </div>
        </div>
