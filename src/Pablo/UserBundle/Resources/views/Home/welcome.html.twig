                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/eleves.png') }}" alt="eleves" height="96px" width="96px"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_personne_list') }}" >&Eacute;l&egrave;ves</a>
                    </h4>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="media">
                <a href="{{ path('pablo_user_notready') }}">
                    <img class="media-object pull-left" src="{{ asset('assets/img/pretty-office/minerval.png') }}" alt="minerval" height="96px" width="96px"/>
                </a>
                <div class="media-body">
                    <h4 class="media-heading">
                        <a href="{{ path('pablo_user_notready') }}">Minerval</a>
