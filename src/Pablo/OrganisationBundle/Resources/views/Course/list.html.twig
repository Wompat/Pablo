{% extends('PabloOrganisationBundle::layout.html.twig') %}

{% block content %}
    <div class="page-header">
        <h2>Liste des cours</h2>
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>#</th>
            <th>Domaine</th>
            <th>Intitul&eacute;</th>
            <th>Sp&eacute;cialit&eacute;</th>
        </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            {% if (course.parent) %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ course.domain.shortName }}</td>
                <td>{{ course.parent.title }}</td>
                <td>{{ course.title }}</td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}