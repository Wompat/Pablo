<div class="span6">
    <h4>T&eacute;l&eacute;phones</h4>
    {% if (personne.telephones|length == 0) %}
        <div class="alert alert-info">
            <h4>Aucun r√©sulat</h4>
            Il n&apos;y a actuellement aucune num&eacute;ro enregistr&eacute;.
        </div>
    {% else %}
        <table class="table">
            <thead>
            <tr>
                <th>Num&eacute;ro</th>
                <th>Info</th>
                <th>GSM</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for telephone in personne.telephones %}
                <tr>
                    <td>{{ telephone.numero }}</td>
                    <td>{{ telephone.info }}</td>
                    <td>{{ (telephone.mobile) ? '<i class="icon-ok"></i>' }}</td>
                    <td style="text-align: right">
                        <a class="btn btn-mini" href="{{ path('pablo_telephone_edit', {'id' : telephone.id}) }}"><i class="icon-pencil"></i></a>
                        <a class="btn btn-mini btn-danger" href="{{ path('pablo_telephone_delete', {'id': telephone.id}) }}"><i class="icon-white icon-remove"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
    <a class="btn" href="{{ path('pablo_telephone_add', {'id': personne.id}) }}">ajouter un num&eacute;ro</a>
</div>