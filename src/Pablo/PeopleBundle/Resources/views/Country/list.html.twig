{% extends('PabloPeopleBundle::layout.html.twig') %}

{% block content %}
    <div class="page-header">
        <h2>Liste des pays</h2>
    </div>
    {% if (not countries) %}
        <div class="alert alert-info">
            <h4 class="alert-heading">Aucun r&eacute;sultat.</h4>
            <p>
                Il n&apos;y a aucun pays actuellement enregistr&eacute; dans la base de donn&eacute;es.
            </p>
        </div>
    {% else %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Code</th>
                <th>Nom</th>
                <th>Continent</th>
                <th>Code FWB</th>
            </tr>
            </thead>
            <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ country.code }}</td>
                    <td>{{ country.name }}</td>
                    <td>{{ (country.continent) ? country.continent.name }}</td>
                    <td>{{ country.codeFWB }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock content %}